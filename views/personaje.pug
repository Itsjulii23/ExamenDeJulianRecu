extends layout

block content
    h1 Vista del personaje
    .container
        .row 
            .col-12.col-md-3
                .card(style='width: 18rem;')
                    img.card-img-top(src=`${personaje.image}` alt='...')
                    .card-body
                        h5.card-title # #{personaje.id}
                        h5.card-title  Name: #{personaje.name}
                        h6.card-subtitle.mb-2.text-body-secondary Genero: #{personaje.gender}
                        p.card-text Fecha: #{new Date(personaje.created).toLocaleDateString()}

    link(rel='stylesheet', href='/stylesheets/id.css')
