extends layout

block content
    .container
        each personaje in personajes
            .row 
                .col-12.col-md-3
                    .card(style='width: 18rem;')
                        img.card-img-top(src=`${personaje.image}` alt='...')
                        .card-body
                            h5 # #{personaje.id} 
                            h5.card-title #{personaje.name}
                            h6.card-subtitle.mb-2.text-body-secondary #{personaje.gender}
                            p.card-text #{new Date(personaje.created).toLocaleDateString()}
                            button#boton.btn.btn-warning(type='button') Guardar en BD
    script.
        let boton = document.getElementById('boton');
        boton.addEventListener('click', ()=>{
            let url = `/personaje/guardar`;
            window.location.href=url;
        });
    link(rel='stylesheet', href='/stylesheets/container.css')